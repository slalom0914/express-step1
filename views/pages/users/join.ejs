<div class="row my-5 justify-content-center">
    <div class="col-8 col-md-6 col-lg-4">
      <h3 class="text-center mb-5">회원가입</h3>
      <form id="join" method="post">
        <div class="input-group my-2">
          <div class="input-group-text">이 메 일</div>
          <input class="form-control" id="email"/>
        </div>
        <div class="input-group">
          <div class="input-group-text">비밀번호</div>
          <input
            class="form-control"
            id="password"
            type="password"
          />
        </div>
        <div class="my-3">
          <button id="joinBtn" type="button" class="btn btn-success w-100">회원가입</button>
        </div>
        <div class="text-end mt-3"><a href="/login">로그인</a></div>
    </form>
  </div>
</div>
<script type="module">
import { getAuth, createUserWithEmailAndPassword } from "https://www.gstatic.com/firebasejs/11.7.3/firebase-auth.js"
import { app } from '/javascripts/firebase.js'
const auth = getAuth()
const joinBtn = document.querySelector("#joinBtn")
joinBtn.addEventListener('click', (e) => {
  //e.preventDefault()
  console.log('회원가입 호출');
  const email = document.querySelector("#email").value
  const password = document.querySelector("#password").value
  createUserWithEmailAndPassword(auth, email, password)
    .then((response) => {
      console.log(response);
      location.href="/login"
    })
    .catch((error) => {
      const errorCode = error.code;
      const errorMessage = error.message;
      // ..
    });

})

</script>
