  </head>
  <body>
    <script type="module">
      import { app } from '/javascripts/firebase.js'
      import { onAuthChange } from '/javascripts/authLogic.js'
      import { getAuth } from "https://www.gstatic.com/firebasejs/11.7.3/firebase-auth.js"
      //파라미터 자리에 auth가 null이거나 undefined가 들어가지 않도록 주의할것.
      const auth = getAuth(app)
      const user = onAuthChange(auth)
      console.log(user);
      if(user){//false, 0, null, undefined, '', NaN
        console.log(user.email);
      }
    </script>
    <div class="container">
      <%-include('include/header.ejs') %>
      <!-- routes>index.js에 등록된 pageName을 읽어온다. -->
      <%-include(pageName) %>
      <%-include('include/footer.ejs') %>
    </div>
  </body>
